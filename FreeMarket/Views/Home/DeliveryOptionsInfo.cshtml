@using FreeMarket.Models
@model DeliveryOptionsViewModel

@{
    ViewBag.Title = "Delivery Options";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="parent" class="center_div container">
    <div class="col-sm-12">
        <div class="row">
            <h1 class="text-center">Delivery Options</h1>
            <hr />
        </div>
        <div class="row text-center">
            <img class="img-thumbnail img-rounded" src="~/Content/Images/slideCourier1.png" />
        </div>
        <div class="row well">
            <h2>Door to Door Courier Delivery</h2>
            @Html.Raw(Model.CourierDeliveryDescription)
        </div>
        <div class="row text-center">
            <img class="img-thumbnail img-rounded" src="~/Content/Images/slideCourier2.png" />
        </div>
        <div class="row well">
            <h2>Collect at Your Post Office</h2>
            @Html.Raw(Model.PostOfficeDeliveryDescription)
        </div>
        <div class="col-md-offset-4 row">
            <a class="btn btn-success" href="@Url.Action("Index", "Product")"><span class="glyphicon glyphicon-shopping-cart">&nbsp;&nbsp;Start Shopping!</span></a>
        </div>
    </div>
</div>

<script type="text/javascript">

$(document).ready(function(){

     $("#myCarousel").carousel({

         interval : 5000

     });

});

</script>