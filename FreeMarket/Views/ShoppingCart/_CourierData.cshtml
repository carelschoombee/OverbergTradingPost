@using FreeMarket.Models
@model ViewProductViewModel

@if (Model.CustodianQuantityOnHand > 0)
{
    <span class="glyphicon glyphicon-ok text-success">&nbsp;&nbsp;@Model.CustodianQuantityOnHand units in stock.</span>
}
else
{ 
    <span class="glyphicon glyphicon-remove text-danger">&nbsp;&nbsp;This item is either out of stock or cannot be delivered to your current address.</span>
}



